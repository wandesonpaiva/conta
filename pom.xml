
<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.joinfaces</groupId>
        <artifactId>jsf-spring-boot-parent</artifactId>
        <version>2.2.5</version>
        <relativePath/>
    </parent>

    <groupId>br.edu.ifrn</groupId>
    <artifactId>sanguebom</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <properties>
        <java.version>1.8</java.version>
        
        <duplicate.ignoredClassPattern>javax.persistence.Persistence(Context|ContextType|Contexts|Property|Unit|Units)</duplicate.ignoredClassPattern>
        <duplicate.ignoredResourcePattern>(changelog.txt|application.yml)</duplicate.ignoredResourcePattern>
        <pmd.excludeFromFailureFile>${check.dir}/pmd/pmd-exclude.properties</pmd.excludeFromFailureFile>        
        <checkstyle.excludes>br/edu/ifrn/sanguebom/dominio/Q*</checkstyle.excludes>
        <cobertura.totalLineRate>33</cobertura.totalLineRate>
        <cobertura.packageLineRate>33</cobertura.packageLineRate>
        <cobertura.lineRate>0</cobertura.lineRate>
        <cobertura.totalBranchRate>48</cobertura.totalBranchRate>
        <cobertura.packageBranchRate>50</cobertura.packageBranchRate>
        <cobertura.branchRate>0</cobertura.branchRate>
        
        <juplo-maven-plugin.version>2.0.0</juplo-maven-plugin.version>    
        <querydsl.version>4.1.4</querydsl.version>
        <apt-maven-plugin.version>1.1.3</apt-maven-plugin.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-apt</artifactId>
                <version>${querydsl.version}</version>
                <scope>provided</scope>
                <exclusions>
                    <exclusion>
                        <groupId>javax.transaction</groupId>
                        <artifactId>jta</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.querydsl</groupId>
                <artifactId>querydsl-jpa</artifactId>
                <version>${querydsl.version}</version>
            </dependency>    
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        
        <dependency>
            <groupId>org.joinfaces</groupId>
            <artifactId>jsf-spring-boot-starter</artifactId>
        </dependency>
        
        <!--<dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>-->    
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>runtime</scope>
        </dependency>		
        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <scope>test</scope>
        </dependency>        
        <dependency>
            <groupId>com.querydsl</groupId>
            <artifactId>querydsl-apt</artifactId>
        </dependency>
        <dependency>
            <groupId>com.querydsl</groupId>
            <artifactId>querydsl-jpa</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.16.10</version>
            <scope>provided</scope>
        </dependency>    
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.mysema.maven</groupId>
                    <artifactId>apt-maven-plugin</artifactId>
                    <version>${apt-maven-plugin.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>process</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>target/generated-sources/java</outputDirectory>
                                <processor>com.querydsl.apt.jpa.JPAAnnotationProcessor</processor>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>                
                <plugin>
                    <groupId>de.juplo</groupId>
                    <artifactId>hibernate-maven-plugin</artifactId>
                    <version>${juplo-maven-plugin.version}</version>
                    <configuration>
                        <delimiter>;</delimiter>
                        <format>true</format>
                        <dialect>org.hibernate.dialect.PostgreSQLDialect</dialect>                            
                        <scanDependencies>system</scanDependencies>
                        <export>false</export>
                        <show>true</show>
                    </configuration>
                </plugin>         
            </plugins>
        </pluginManagement>
        
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <executable>true</executable>
                </configuration>
                <executions>
                    <execution>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.mysema.maven</groupId>
                <artifactId>apt-maven-plugin</artifactId>
            </plugin>        
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <configuration>
                    <instrumentation>
                        <ignores>
                            <ignore>br.edu.ifrn.sanguebom.dominio.Q*</ignore>
                        </ignores>
                        <excludes>
                            <exclude>br/edu/ifrn/sanguebom/dominio/Contato.class</exclude>
                            <exclude>br/edu/ifrn/sanguebom/dominio/Instituicao.class</exclude>
                            <exclude>br/edu/ifrn/sanguebom/dominio/Estoque.class</exclude>
                            <exclude>br/edu/ifrn/sanguebom/dominio/Usuario.class</exclude>
                            <exclude>br/edu/ifrn/sanguebom/dominio/Doador.class</exclude>
                            <exclude>br/edu/ifrn/sanguebom/dominio/Endereco.class</exclude>
                            <exclude>br/edu/ifrn/sanguebom/dominio/Doacao.class</exclude>
                        </excludes>
                    </instrumentation>
                </configuration>            
            </plugin>
        </plugins>
    </build>

    <profiles>        
        <!-- criar script do esquema do banco de dados -->
        <profile>
            <id>schema</id>
            <build>
                <plugins>
                    <!-- gerando o script de criacao do banco -->            
                    <plugin>
                        <groupId>de.juplo</groupId>
                        <artifactId>hibernate-maven-plugin</artifactId>
                        <configuration>
                            <implicitNamingStrategy>org.springframework.boot.orm.jpa.hibernate.SpringImplicitNamingStrategy</implicitNamingStrategy>
                            <physicalNamingStrategy>org.springframework.boot.orm.jpa.hibernate.SpringPhysicalNamingStrategy</physicalNamingStrategy>
                        </configuration>
                        <executions>
                            <execution>
                                <id>drop-schema</id>
                                <goals>
                                    <goal>drop</goal>
                                </goals>
                                <configuration>
                                    <outputFile>${project.build.directory}/classes/drop-schema.sql</outputFile>
                                </configuration>
                            </execution>
                            <execution>
                                <id>create-schema</id>
                                <goals>
                                    <goal>create</goal>
                                </goals>
                                <configuration>
                                    <outputFile>${project.build.directory}/classes/create-schema.sql</outputFile>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>         
                </plugins>
            </build>
        </profile>
    </profiles>

    <name>sanguebom</name>
    <description>Aplicação para controle de estoque sanguíneo de hospitais</description>
    <url>https://github.com/wandesonpaiva/sanguebom</url>
    <inceptionYear>2016</inceptionYear>

